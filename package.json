{
  "name": "speech-gen-monorepo",
  "private": true,
  "version": "0.1.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "dev": "concurrently -k \"npm run dev --workspace @app/backend\" \"npm run dev --workspace @app/web\"",
    "lint": "npm run lint --workspaces",
    "format": "npm run format --workspaces"
  }
}

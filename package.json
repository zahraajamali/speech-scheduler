{
  "name": "piper-announce",
  "version": "1.3.0",
  "description": "AI-powered announcement generator with bundled Piper TTS",
  "type": "module",
  "main": "src/index.js",
  "bin": {
    "make-announcement": "bin/make-announcement",
    "piper-voices": "bin/piper-voices"
  },
  "scripts": {
    "start": "node bin/make-announcement",
    "test": "node examples/basic-usage.js",
    "example": "node examples/basic-usage.js",
    "postinstall": "node scripts/post-install.js",
    "prepare": "node scripts/download-binaries.js && node scripts/post-install.js",
    "download-voices": "node scripts/download-voices.js",
    "download-voices:force": "node scripts/download-voices.js --force",
    "download-binaries": "node scripts/download-binaries.js",
    "check-voices": "node bin/piper-voices status",
    "setup": "node scripts/post-install.js",
    "build": "node scripts/download-binaries.js"
  },
  "keywords": [
    "tts",
    "piper",
    "announcement",
    "text-to-speech",
    "openai",
    "audio-generation",
    "voice-synthesis",
    "ai",
    "speech",
    "bundled"
  ],
  "author": "Your Name <your.email@example.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/zahraajamali/speech-scheduler.git"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "dependencies": {
    "dotenv": "^16.4.5",
    "openai": "^4.56.0",
    "tar": "^6.2.0",
    "yauzl": "^2.10.0"
  },
  "files": [
    "src/",
    "bin/",
    "scripts/",
    "examples/",
    "binaries/",
    "voices/",
    "README.md",
    "LICENSE"
  ],
  "os": [
    "linux",
    "darwin",
    "win32"
  ],
  "cpu": [
    "x64",
    "arm64"
  ],
  "config": {
    "voice_download_timeout": 300000,
    "voice_download_retries": 3
  }
}
